{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@idea-launch/profiles/model": ["libs/profiles/model/src/index.ts"],
      "@idea-launch/profiles/ui": ["libs/profiles/ui/src/index.ts"],
      "@idea-launch/profiles/persistence": [
        "libs/profiles/persistence/src/index.ts"
      ],
      "@idea-launch/projects/model": ["libs/projects/model/src/index.ts"],
      "@idea-launch/projects/persistence": [
        "libs/projects/persistence/src/index.ts"
      ],
      "@idea-launch/projects/ui": ["libs/projects/ui/src/index.ts"],
      "@idea-launch/resources/model": ["libs/resources/model/src/index.ts"],
      "@idea-launch/resources/persistence": [
        "libs/resources/persistence/src/index.ts"
      ],
      "@idea-launch/api": ["libs/api/src/index.ts"],
      "@idea-launch/resources/ui": ["libs/resources/ui/src/index.ts"],
      "@idea-launch/redux-effect": ["libs/redux-effect/src/index.ts"],
      "@idea-launch/accounts/ui": ["libs/accounts/ui/src/index.ts"],
      "@idea-launch/accounts/model": ["libs/accounts/model/src/index.ts"],
      "@idea-launch/http-client": ["libs/http-client/src/index.ts"],
      "@idea-launch/routing-adt": ["libs/routing-adt/src/index.ts"],
      "@idea-launch/morphic-router": ["libs/morphic-router/src/index.ts"],
      "@idea-launch/browser-window": ["libs/browser-window/src/index.ts"],
      "@idea-launch/firebase-web": ["libs/firebase-web/src/index.ts"],
      "@idea-launch/firebase-functions": [
        "libs/firebase-functions/src/index.ts"
      ],
      "@idea-launch/redux-table": ["libs/redux-table/src/index.ts"],
      "@idea-launch/logger": ["libs/logger/src/index.ts"],
      "@idea-launch/uuid-gen": ["libs/uuid-gen/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
